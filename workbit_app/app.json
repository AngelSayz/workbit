{
  "expo": {
    "name": "workbit_app",
    "slug": "workbit_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMotionUsageDescription": "Se usa para detectar actividad física durante tus reservas.",
        "NSMicrophoneUsageDescription": "Se usa para medir el nivel de ruido ambiental durante tus reservas."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.angelsayz.workbit_app",
      "permissions": ["RECORD_AUDIO"]
    },
    "plugins": [
      [
        "expo-audio",
        {
          "microphonePermission": "Permitir que la app use el micrófono para medir el nivel de ruido."
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "85643f7f-ccad-4b42-9d5b-c683c6e44ff5"
      }
    }
  }
}
